{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
<div class="container-fluid mt-5">
    <div class="row">
        <!-- Première ligne de cartes -->
        <div class="col-12 col-md-6 mb-4"> <!-- Sur mobile, occupe toute la largeur, sur écran moyen et plus, occupe la moitié -->
            <div class="card bg-danger text-light p-3 h-100 text-center"> <!-- h-100 pour une hauteur égale, text-center pour centrer -->
                <h1 class="card-title">LFB</h1>
                <h2>{{ totalPointsLFB | default(0) }} PTS SEMAINE {{ latestWeekLFB.id | default(1) }}</h2>
                <h2>RANKING SEMAINE {{ latestWeekLFB.id | default(1) }}: {{ rankLFB | default(0) }}e / {{ totalUsersLFB | default(0) }}</h2>
            </div>
        </div>
        <div class="col-12 col-md-6 mb-4"> <!-- Sur mobile, occupe toute la largeur, sur écran moyen et plus, occupe la moitié -->
            <div class="card bg-danger text-light p-3 h-100 text-center"> <!-- h-100 pour une hauteur égale, text-center pour centrer -->
                <h1 class="card-title">LF2</h1>
                <h2>{{ totalPointsLF2 | default(0) }} PTS SEMAINE {{ (latestWeekLF2.id -22 | default(1))  }}</h2>
                <h2>RANKING SEMAINE {{ latestWeekLF2.id -22 | default(1) }}: {{ rankLF2 | default(0) }}e / {{ totalUsersLF2 | default(0) }}</h2>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Deuxième ligne de cartes -->
        <div class="col-12 col-md-6 mb-4"> <!-- Sur mobile, occupe toute la largeur, sur écran moyen et plus, occupe la moitié -->
            <div class="card bg-danger text-light p-3 h-100 text-center"> <!-- h-100 pour une hauteur égale, text-center pour centrer -->
                <h1 class="card-title">LFB</h1>
                <h2>{{ app.user.getPtlLfb | default(0) }} PTS SAISON</h2>
                <h3>{{ rankLFB | default(0) }}e / {{ totalUsersLFB | default(0) }}</h3>
            </div>
        </div>
        <div class="col-12 col-md-6 mb-4"> <!-- Sur mobile, occupe toute la largeur, sur écran moyen et plus, occupe la moitié -->
            <div class="card bg-danger text-light p-3 h-100 text-center"> <!-- h-100 pour une hauteur égale, text-center pour centrer -->
                <h1 class="card-title">LF2</h1>
                <h2>{{ app.user.getPtLf2 | default(0) }} PTS SAISON</h2>
                <h3>{{ rankLF2 | default(0) }}e / {{ totalUsersLF2 | default(0) }}</h3>
            </div>
        </div>
    </div>
</div>


    <div class="row mb-4">
        <!-- Troisième ligne de cartes (deck) -->
        <div class="col-12"> <!-- Sur mobile, occupe toute la largeur -->
            <div class="card bg-danger text-light p-3 h-100 text-center"> <!-- h-100 permet au deck d'occuper toute la hauteur possible, text-center pour centrer -->
                <h1 class="card-title">5 MAJEUR</h1>
                <h2>LFB</h2>
                <h2>LF2</h2>
            </div>
        </div>
    </div>
</div>
{% endblock %}
