{% extends 'base.html.twig' %}

{% block title %}Classement {{ league|upper }}{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1 class="text-center mb-4">Classement - {{ league|upper }}</h1>

        <div class="table-responsive"> <!-- Ajout de table-responsive pour mobile-first -->
            <table class="table table-striped table-bordered"> <!-- Utilisation des classes Bootstrap -->
                <thead class="thead-dark"> <!-- Classe Bootstrap pour un en-tÃªte sombre -->
                    <tr>
                        <th scope="col">Rang</th>
                        <th scope="col">Pseudo</th>
                        <th scope="col">Points {{ league|upper }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ user.pseudo }}</td>
                            <td>
                                {% if league == 'lfb' %}
                                    {{ user.ptlLfb }}
                                {% else %}
                                    {{ user.ptLf2 }}
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
