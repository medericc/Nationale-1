{% extends 'base.html.twig' %}

{% block title %}Team index{% endblock %}

{% block body %}
   <div class="container my-4">
    <h1 class="text-center">Team Index</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for team in teams %}
                    <tr>
                        <td>{{ team.id }}</td>
                        <td>{{ team.name }}</td>
                        <td>
                            <a href="{{ path('app_team_show', {'id': team.id}) }}" class="btn btn-info btn-sm me-2 mb-1">Show</a>
                            <a href="{{ path('app_team_edit', {'id': team.id}) }}" class="btn btn-warning btn-sm mb-1">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="text-center">
        <a href="{{ path('app_team_new') }}" class="btn btn-success">Create New Team</a>
    </div>
</div>

{% endblock %}
